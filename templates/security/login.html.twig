{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="container d-flex flex-column mt-5 ms-0 ms-md-5 col-12 col-sm-8 col-md-4 col-xl-3" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Connexion !</h1>
    <label class="mt-2" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label class="mt-2" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="mt-3 d-flex align-items-center justify-content-between">
        <button class="btn btn-success" type="submit">Connexion</button>
        <a class="link" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
    </div>
    {% if error %}
        <div class="alert alert-danger mt-2">{{ error.message|trans({}, 'security') }}</div>
    {% endif %}
</form>

{% endblock %}
