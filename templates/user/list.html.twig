{% extends 'base.html.twig' %}

{% block body %}

    <div class="container d-flex flex-column mt-5 ms-0 ms-md-5 col-12 col-sm-8 col-md-4 col-xl-3">
        <a href="{{ path('app_register') }}">Ajouter un nouveau {% if type == 'ROLE_TENANT' %} locataire {% elseif type == 'ROLE_REPRESENTATIVE' %} mandataire {% else %} administrateur {% endif %}</a>
        {% if users is defined and users is not null %}
            <table>
                <tr>
                    <td>
                        Nom
                    </td>
                    <td>
                        Prenom
                    </td>
                    <td>
                        link
                    </td>
                    <td>
                        supprimer
                    </td>
                </tr>
                {% for user in users %}
                    <tr>
                        <td>
                            {{ user.name }}
                        </td>
                        <td>
                            {{ user.lastname }}
                        </td>
                        <td>
                            <a href="{{ path('modifyId',{id:user.id}) }}">link</a>
                        </td>
                        <td>
                            <a class="bi bi-dash-circle-fill" href="{{ path('deleteId', {id: user.id})}}"></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <div>
                il n'existe aucun {{ type }}
            </div>
        {% endif %}
    </div>
{% endblock %}
